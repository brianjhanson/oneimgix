{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("onedesign\\oneimgix\\assetbundles\\oneimgix\\OneImgixAsset") %}

{{ forms.autosuggestField({
  label: 'Imgix API Key',
  instructions: 'Your Imgix API key.',
  suggestEnvVars: true,
  id: 'apiKey',
  name: 'apiKey',
  value: settings['apiKey'],
  errors: settings.getErrors('apiKey')
}) }}

{{ forms.autosuggestField({
  label: 'Imgix Source Name',
  instructions: 'The name of your Imgix source.',
  suggestEnvVars: true,
  id: 'sourceName',
  name: 'sourceName',
  value: settings['sourceName'],
  errors: settings.getErrors('sourceName')
}) }}

{{ forms.autosuggestField({
  label: 'Secure URL Token',
  instructions: 'If you have `Secure URL` enabled for your Imgix source, this should be the `Secure URL Token` value listed there.',
  suggestEnvVars: true,
  id: 'secureUrlToken',
  name: 'secureUrlToken',
  value: settings['secureUrlToken'],
  errors: settings.getErrors('secureUrlToken')
}) }}

